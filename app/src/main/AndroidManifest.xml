<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.passtheaux.turnip">

    <!-- Required for Nearby Connections -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo_svg"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service
            android:name="ca.passtheaux.turnip.ConnectionService"
            android:enabled="true"
            android:exported="true"
            android:stopWithTask="true" />
        <activity
            android:name="ca.passtheaux.turnip.Main"
            android:theme="@style/Empty">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.passtheaux.turnip.Host"
            android:label="@string/title_activity_host"
            android:parentActivityName="ca.passtheaux.turnip.Main"
            android:theme="@style/AppActionBarActivityTheme" />
        <activity
            android:name="ca.passtheaux.turnip.Room"
            android:label="Room"
            android:parentActivityName="ca.passtheaux.turnip.Main"
            android:theme="@style/AppActionBarActivityTheme" />
        <activity
            android:name="ca.passtheaux.turnip.RoomList"
            android:label="Rooms"
            android:parentActivityName="ca.passtheaux.turnip.Main"
            android:theme="@style/AppActionBarActivityTheme" />
        <activity
            android:name="ca.passtheaux.turnip.SongSearch"
            android:theme="@style/Empty"/>
    </application>

</manifest>