<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.turnip.turnip">

    <!-- Required for Nearby Connections -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service
            android:name=".BackgroundService"
            android:enabled="true"
            android:exported="false"
            android:stopWithTask="false" />

        <activity
            android:name=".MainActivity"
            android:theme="@style/Empty">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HostActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_host"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppActionBarActivityTheme" />
        <!--
        TODO: allow room to re-orient,
        need to create horizontal song info dialog fragment to do so
        -->
        <activity
            android:name=".RoomActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Room"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppActionBarActivityTheme" />
        <activity
            android:name=".RoomListActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Join"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppActionBarActivityTheme" />
        <activity
            android:name=".SongSearchActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:launchMode="singleTop"
            android:parentActivityName=".RoomActivity"
            android:theme="@style/Empty">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity android:name=".SettingsActivity"
            android:theme="@style/PreferenceScreenTheme"
            android:parentActivityName=".RoomActivity"
            android:label="Settings"></activity>
    </application>

</manifest>